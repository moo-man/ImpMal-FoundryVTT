<div class="impmal reward">
    <p class="reason">{{reason}}</p>

    <div class="rewards">
        {{#if solars}}
        <div>
            <p>{{localize "IMPMAL.Solars"}}</p>
            <div class="amount">
                {{solars}}
            </div>
        </div>
        {{/if}}
        {{#if xp}}
        <div>
            <p>{{localize "IMPMAL.XP"}}</p>
            <div class="amount">
                {{xp}}
            </div>
        </div>
        {{/if}}
    </div>
    <button type="button" data-action="receiveReward">{{localize "IMPMAL.Receive"}}</button>
</div>