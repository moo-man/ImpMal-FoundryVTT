<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
    {{#if (isGM)}}
    <div class="editor-section list-row">
        <div class="header" data-action="expandRow">
            {{localize "IMPMAL.GMNotes"}}
            <span class="collapse-toggle {{#unless enriched.system.notes.gm}}inactive{{/unless}}" aria-hidden="true">
                <i class="fa-solid fa-chevron-down"></i>
            </span>
        </div>
        <div class="dropdown-content expanded">
            <div class="expander">
                {{formInput fields.notes.fields.gm value=source.system.notes.gm enriched=enriched.system.notes.gm toggled=true}}
            </div>
        </div>
    </div>
    {{/if}}

    <div class="editor-section list-row">
        <div class="header" data-action="expandRow">
            {{localize "IMPMAL.Biography"}}
            <span class="collapse-toggle {{#unless enriched.system.notes.player}}inactive{{/unless}}" aria-hidden="true">
                <i class="fa-solid fa-chevron-down"></i>
            </span>
        </div>
        <div class="dropdown-content expanded">
            <div class="expander">
                {{formInput fields.notes.fields.player value=source.system.notes.player enriched=enriched.system.notes.player toggled=true}}
            </div>
        </div>
    </div>
</section>